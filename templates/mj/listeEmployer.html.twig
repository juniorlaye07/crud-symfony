{% extends "base.html.twig" %}

{% block body %}
<section class="page-section clearfix">
    <div class="card-body"></div>
    <div class="container admin">
        <div >
            <div class="card">
                <div class="card-body">
                    <h1><strong>Liste Employes:</strong></h1>
                        <table id="employer" class="table table-striped table-bordered">
                            <thead>
                                <tr class="table-active">
                                    <th>Matricule</th>
                                        <th>Nom</th>
                                        <th>Date_naissance</th>
                                        <th>Salaire</th>
                                        <th>Service</th>
                                        <th>Modification</th>
                                        <th>Suppression</th>                     
                                    
                                    {% for junior in jremployer  %}
                                        <tr>
                                            <td> {{ junior.matricule }} </td>
                                            <td> {{ junior.nom }} </td>
                                            <td> {{ junior.datenaissance | date ('d-m-Y') }} </td>
                                            <td> {{ junior.salaire }} </td>
                                            <td> {{ junior.service.libelle }} </td>
                                            
                                     
                                        <td>
                                            <a class="btn btn-primary" href="{{junior.id}}/form"><i class="fa fa-pencil fa-fw"></i>Modifier</a>
                                        </td>
                                    
                                   
                                        <td>
                                            <a class="btn btn-primary"  href="{{junior.id}}/list"><i
                                                    class="fa fa-trash-o fa-lg"></i>Suprimer</a>
                                        </td>
                                    
                                        </tr>
                                    {% endfor %}
                                </tr>
                            </thead>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
$(document).ready(function() {
$('#employer').DataTable( {
"language": {
"lengthMenu": "Display _MENU_ records per page",
"zeroRecords": "Nothing found - sorry",
"info": "Showing page _PAGE_ of _PAGES_",
"infoEmpty": "No records available",
"infoFiltered": "(filtered from _MAX_ total records)"} } );
} );
</script>
{% endblock %}